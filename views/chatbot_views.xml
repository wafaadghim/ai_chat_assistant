<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vue formulaire pour AI Knowledge Base -->
        <record id="view_ai_knowledge_base_form" model="ir.ui.view">
            <field name="name">ai.knowledge.base.form</field>
            <field name="model">ai.knowledge.base</field>
            <field name="arch" type="xml">
                <form string="Base de Connaissances AI">
                    <header>
                        <field name="is_active" widget="boolean_toggle"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="action_view_usage" type="object" icon="fa-comments">
                                <field name="usage_count" widget="statinfo" string="Utilisations"/>
                            </button>
                        </div>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="question" placeholder="Question principale..."/>
                            </h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="category"/>
                                <field name="language"/>
                                <field name="priority"/>
                            </group>
                            <group>
                                <field name="create_date" readonly="1"/>
                                <field name="write_date" readonly="1"/>
                                <field name="usage_count" readonly="1"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Réponse" name="response">
                                <field name="answer" widget="html" placeholder="Réponse détaillée..."/>
                            </page>
                            <page string="Mots-clés" name="keywords">
                                <field name="keywords" widget="many2many_tags" placeholder="Mots-clés pour la recherche..."/>
                            </page>
                            <page string="Références" name="references">
                                <field name="campaign_references" placeholder="Références aux campagnes ou données connexes..."/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vue liste pour AI Knowledge Base -->
        <record id="view_ai_knowledge_base_list" model="ir.ui.view">
            <field name="name">ai.knowledge.base.list</field>
            <field name="model">ai.knowledge.base</field>
            <field name="arch" type="xml">
                <list string="Base de Connaissances AI">
                    <field name="question"/>
                    <field name="category"/>
                    <field name="language"/>
                    <field name="priority"/>
                    <field name="usage_count"/>
                    <field name="is_active"/>
                    <field name="create_date"/>
                </list>
            </field>
        </record>

        <!-- Vue recherche pour AI Knowledge Base -->
        <record id="view_ai_knowledge_base_search" model="ir.ui.view">
            <field name="name">ai.knowledge.base.search</field>
            <field name="model">ai.knowledge.base</field>
            <field name="arch" type="xml">
                <search string="Rechercher dans la Base de Connaissances">
                    <field name="question"/>
                    <field name="answer"/>
                    <field name="category"/>
                    <field name="keywords"/>
                    <separator/>
                    <filter string="Active" name="active" domain="[('is_active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('is_active', '=', False)]"/>
                    <separator/>
                    <group expand="0" string="Grouper par">
                        <filter string="Catégorie" name="group_category" context="{'group_by': 'category'}"/>
                        <filter string="Langue" name="group_language" context="{'group_by': 'language'}"/>
                        <filter string="Priorité" name="group_priority" context="{'group_by': 'priority'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action pour AI Knowledge Base -->
        <record id="action_ai_knowledge_base" model="ir.actions.act_window">
            <field name="name">Base de Connaissances AI</field>
            <field name="res_model">ai.knowledge.base</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_ai_knowledge_base_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créez votre première entrée de base de connaissances AI !
                </p>
                <p>
                    La base de connaissances alimente les réponses du chatbot AI.
                    Ajoutez des questions fréquentes, des insights marketing, et des recommandations.
                </p>
            </field>
        </record>

        <!-- Vue formulaire pour AI Chat Session -->
        <record id="view_ai_chat_session_form" model="ir.ui.view">
            <field name="name">ai.chat.session.form</field>
            <field name="model">ai.chat.session</field>
            <field name="arch" type="xml">
                <form string="Session de Chat AI">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="active,closed"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="action_view_messages" type="object" icon="fa-comments">
                                <field name="message_count" widget="statinfo" string="Messages"/>
                            </button>
                        </div>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nom de la session..."/>
                            </h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="user_id"/>
                                <field name="start_time"/>
                                <field name="last_activity"/>
                            </group>
                            <group>
                                <field name="state"/>
                                <field name="session_type"/>
                                <field name="create_date" readonly="1"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Messages" name="messages">
                                <field name="message_ids">
                                    <list editable="bottom">
                                        <field name="message_type"/>
                                        <field name="message"/>
                                        <field name="timestamp"/>
                                        <field name="response_time"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Métadonnées" name="metadata">
                                <field name="metadata" widget="ace" options="{'mode': 'json'}"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vue liste pour AI Chat Session -->
        <record id="view_ai_chat_session_list" model="ir.ui.view">
            <field name="name">ai.chat.session.list</field>
            <field name="model">ai.chat.session</field>
            <field name="arch" type="xml">
                <list string="Sessions de Chat AI">
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="start_time"/>
                    <field name="last_activity"/>
                    <field name="message_count"/>
                    <field name="state"/>
                    <field name="session_type"/>
                </list>
            </field>
        </record>

        <!-- Action pour AI Chat Session -->
        <record id="action_ai_chat_session" model="ir.actions.act_window">
            <field name="name">Sessions de Chat AI</field>
            <field name="res_model">ai.chat.session</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Aucune session de chat pour le moment !
                </p>
                <p>
                    Les sessions de chat s'afficheront ici automatiquement quand les utilisateurs interagiront avec le chatbot AI.
                </p>
            </field>
        </record>

        <!-- Vue formulaire pour AI Chat Message -->
        <record id="view_ai_chat_message_form" model="ir.ui.view">
            <field name="name">ai.chat.message.form</field>
            <field name="model">ai.chat.message</field>
            <field name="arch" type="xml">
                <form string="Message de Chat AI">
                    <sheet>
                        <group>
                            <group>
                                <field name="session_id"/>
                                <field name="message_type"/>
                                <field name="user_id"/>
                            </group>
                            <group>
                                <field name="timestamp"/>
                                <field name="response_time"/>
                                <field name="confidence_score"/>
                            </group>
                        </group>
                        
                        <group string="Contenu du Message">
                            <field name="message" widget="text"/>
                        </group>
                        
                        <group string="Métadonnées" col="1">
                            <field name="metadata" widget="ace" options="{'mode': 'json'}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vue liste pour AI Chat Message -->
        <record id="view_ai_chat_message_list" model="ir.ui.view">
            <field name="name">ai.chat.message.list</field>
            <field name="model">ai.chat.message</field>
            <field name="arch" type="xml">
                <list string="Messages de Chat AI">
                    <field name="session_id"/>
                    <field name="message_type"/>
                    <field name="message"/>
                    <field name="user_id"/>
                    <field name="timestamp"/>
                    <field name="response_time"/>
                    <field name="confidence_score"/>
                </list>
            </field>
        </record>

        <!-- Action pour AI Chat Message -->
        <record id="action_ai_chat_message" model="ir.actions.act_window">
            <field name="name">Messages de Chat AI</field>
            <field name="res_model">ai.chat.message</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Aucun message de chat pour le moment !
                </p>
                <p>
                    Les messages de chat s'afficheront ici automatiquement quand les utilisateurs utiliseront le chatbot AI.
                </p>
            </field>
        </record>

        <!-- Menu principal -->
        <menuitem id="menu_ai_chat_assistant_root" 
                  name="AI Chat Assistant" 
                  sequence="100"/>

        <menuitem id="menu_ai_knowledge_base" 
                  name="Base de Connaissances" 
                  parent="menu_ai_chat_assistant_root" 
                  action="action_ai_knowledge_base" 
                  sequence="10"/>

        <menuitem id="menu_ai_chat_sessions" 
                  name="Sessions de Chat" 
                  parent="menu_ai_chat_assistant_root" 
                  action="action_ai_chat_session" 
                  sequence="20"/>

        <menuitem id="menu_ai_chat_messages" 
                  name="Messages de Chat" 
                  parent="menu_ai_chat_assistant_root" 
                  action="action_ai_chat_message" 
                  sequence="30"/>

    </data>
</odoo>